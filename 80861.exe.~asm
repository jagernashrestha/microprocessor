data segment
msg1 db 10,13,'enter the string:$'
msg2 db 10,13,'string is palindrome'
msg3 db 10,13,'string isnt palindrome:$ '
str1 db 50 dyp(0)
data ends
code segment
assume cs:code segment , ds:date segment
start:
mov ax, data
mov ds, ax
lea dx ,msg1

mov ah, 09h
int 21h

lea si,str1
lea di, str1

mov ah,01h

next: int 21h
cmp al,0dh
je terminate
mov [di],al
inc di
jmp next

terminate:
mov al ,'$'
mov [di],al
dothis:
dec di
mov al, [si]
cmp [di],al
jne notpalindrome
inc si
cmp si,di
jl dothis
palindrome :
mov ah ,09h
lea dx,msg2
int 21h
jmp yy

notpalindrome:
mov ah,09h
lea dx,msg3
int 21h

yy:
mov ah,4ch
int 21h
code ends
end start





